<html lang="{{i18nLang}}">
  <head>
    <meta charset="UTF-8" />
    <title>{{t "inventory_report.title"}}</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        margin: 24px;
        color: #1f2937;
      }

      h1 {
        font-size: 24px;
        margin-bottom: 8px;
      }

      .meta {
        margin-bottom: 24px;
      }

      .meta p {
        margin: 4px 0;
      }

      .summary {
        display: flex;
        gap: 16px;
        margin-bottom: 24px;
      }

      .summary-card {
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 12px 16px;
        min-width: 150px;
        background: #f9fafb;
      }

      .summary-card h2 {
        font-size: 14px;
        text-transform: uppercase;
        margin: 0 0 8px;
        color: #6b7280;
      }

      .summary-card strong {
        font-size: 18px;
        color: #111827;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      th,
      td {
        border: 1px solid #e5e7eb;
        padding: 8px;
        font-size: 12px;
      }

      th {
        background: #f3f4f6;
        text-align: left;
      }

      tbody tr:nth-child(odd) {
        background: #fafafa;
      }

      .status {
        font-weight: 600;
      }

      .pending {
        color: #dc2626;
      }
    </style>
  </head>
  <body>
    <h1>{{t "inventory_report.title"}}</h1>
    <div class="meta">
      <p><strong>{{t "inventory_report.generated_at"}}</strong>
        {{formatDate generatedAt}}</p>
      {{#if filters.church}}
        <p><strong>{{t "inventory_report.congregation"}}</strong>
          {{filters.church}}</p>
      {{/if}}
      {{#if filters.categoryLabel}}
        <p><strong>{{t "inventory_report.category"}}</strong>
          {{filters.categoryLabel}}</p>
      {{/if}}
      {{#if filters.status}}
        <p><strong>{{t "inventory_report.status"}}</strong>
          {{filters.status}}</p>
      {{/if}}
    </div>
    <br /><br />

    <div class="summary">
      <div class="summary-card">
        <h2>{{t "inventory_report.summary_total_assets"}}</h2>
        <strong>{{summary.totalAssets}}</strong>
      </div>
      <div class="summary-card">
        <h2>{{t "inventory_report.summary_estimated_value"}}</h2>
        <strong>{{summary.totalValueFormatted}}</strong>
      </div>

    </div>

    <table>
      <thead>
        <tr>
          <th>{{t "inventory_report.table.index"}}</th>
          <th>{{t "inventory_report.table.code"}}</th>
          <th>{{t "inventory_report.table.name"}}</th>
          <th>{{t "inventory_report.table.category"}}</th>
          <th>{{t "inventory_report.table.status"}}</th>
          <th>{{t "inventory_report.table.value"}}</th>
          <th>{{t "inventory_report.table.responsible"}}</th>
          <th>{{t "inventory_report.table.location"}}</th>
          <th>{{t "inventory_report.table.acquisition"}}</th>
        </tr>
      </thead>
      <tbody>
        {{#if assets.length}}
          {{#each assets}}
            <tr>
              <td>{{index}}</td>
              <td>{{code}}</td>
              <td>{{name}}</td>
              <td>{{categoryLabel}}</td>
              <td class="status">{{statusLabel}}</td>
              <td>{{valueFormatted}}</td>
              <td>{{responsibleName}}</td>
              <td>{{location}}</td>
              <td>{{acquisitionDateFormatted}}</td>

            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="11">
              {{t "inventory_report.empty"}}
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </body>
</html>