<style>
  :root {
    color-scheme: light;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 12px;
    line-height: 1.5;
  }

  .report {
    width: 100%;
    max-width: 860px;
    margin: 0 auto;
    color: #1f2933;
  }

  .header {
    text-align: center;
    margin-bottom: 32px;
    padding-bottom: 16px;
    border-bottom: 2px solid #20364b;
  }

  .header h1 {
    font-size: 22px;
    margin: 0 0 8px 0;
    color: #20364b;
    font-weight: 700;
  }

  .header .subtitle {
    font-size: 14px;
    color: #52606d;
    margin: 4px 0;
  }

  .dre-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 24px;
  }

  .dre-table td {
    padding: 10px 12px;
    border-bottom: 1px solid #d9e2ec;
  }

  .dre-table .section-header td {
    background: #e4ebf5;
    color: #334e68;
    font-weight: 700;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-top: 2px solid #20364b;
    border-bottom: 2px solid #20364b;
  }

  .dre-table .line-item td {
    font-size: 12px;
  }

  .dre-table .line-item .label {
    padding-left: 24px;
    color: #52606d;
  }

  .dre-table .subtotal td {
    font-weight: 600;
    background: #f7f9fc;
    border-top: 1px solid #cbd5e0;
    border-bottom: 1px solid #cbd5e0;
  }

  .dre-table .total td {
    font-weight: 700;
    font-size: 14px;
    background: #e4ebf5;
    border-top: 2px solid #20364b;
    border-bottom: 2px solid #20364b;
    color: #20364b;
  }

  .amount {
    text-align: right;
    font-feature-settings: "tnum";
    white-space: nowrap;
  }

  .negative {
    color: #b42318;
  }

  .positive {
    color: #027a48;
  }

  .metadata {
    margin-top: 40px;
    padding-top: 16px;
    border-top: 1px solid #d9e2ec;
    font-size: 10px;
    color: #7b8794;
    text-align: center;
  }

  .notes {
    margin-top: 32px;
    padding: 12px;
    background: #f7f9fc;
    border-left: 3px solid #2e5a8e;
    font-size: 11px;
    color: #52606d;
  }

  .notes h3 {
    margin: 0 0 8px 0;
    font-size: 12px;
    color: #20364b;
  }

  .notes p {
    margin: 4px 0;
  }
</style>

<div class="report">
  <header class="header">
    <h1>{{t "dre_report.title"}}</h1>
    <p class="subtitle">
      {{#if month}}
        {{t "dre_report.period_label"}} {{month}}/{{year}}
      {{else}}
        {{t "dre_report.year_label"}} {{year}}
      {{/if}}
    </p>
    <p class="subtitle">{{t "dre_report.subtitle"}}</p>
  </header>

  <table class="dre-table">
    <!-- Receitas -->
    <tr class="section-header">
      <td colspan="2">{{t "dre_report.sections.revenues"}}</td>
    </tr>
    <tr class="line-item">
      <td class="label">{{t "dre_report.labels.gross_revenue"}}</td>
      <td class="amount {{#if (isNegative grossRevenue)}}negative{{else}}positive{{/if}}">
        {{formatCurrency grossRevenue}}
      </td>
    </tr>
    <tr class="subtotal">
      <td>{{t "dre_report.labels.net_revenue"}}</td>
      <td class="amount {{#if (isNegative netRevenue)}}negative{{else}}positive{{/if}}">
        {{formatCurrency netRevenue}}
      </td>
    </tr>

    <!-- Custos Diretos -->
    <tr class="section-header">
      <td colspan="2">{{t "dre_report.sections.direct_costs"}}</td>
    </tr>
    <tr class="line-item">
      <td class="label">{{t "dre_report.labels.direct_costs"}}</td>
      <td class="amount {{#if (isExpense directCosts)}}negative{{/if}}">
        {{formatExpense directCosts}}
      </td>
    </tr>
    <tr class="subtotal">
      <td>{{t "dre_report.labels.gross_profit"}}</td>
      <td class="amount {{#if (isNegative grossProfit)}}negative{{else}}positive{{/if}}">
        {{formatCurrency grossProfit}}
      </td>
    </tr>

    <!-- Despesas Operacionais + Repasses Ministeriais -->
    <tr class="section-header">
      <td colspan="2">{{t "dre_report.sections.operational_expenses"}}</td>
    </tr>
    <tr class="line-item">
      <td class="label">{{t "dre_report.labels.operational_expenses"}}</td>
      <td class="amount {{#if (isExpense operationalExpenses)}}negative{{/if}}">
        {{formatExpense operationalExpenses}}
      </td>
    </tr>
    <tr class="line-item">
      <td class="label">{{t "dre_report.labels.ministry_transfers"}}</td>
      <td class="amount {{#if (isExpense ministryTransfers)}}negative{{/if}}">
        {{formatExpense ministryTransfers}}
      </td>
    </tr>
    <tr class="subtotal">
      <td>{{t "dre_report.labels.operational_result"}}</td>
      <td class="amount {{#if (isNegative operationalResult)}}negative{{else}}positive{{/if}}">
        {{formatCurrency operationalResult}}
      </td>
    </tr>

    <!-- Resultados Extraordinários -->
    <tr class="section-header">
      <td colspan="2">{{t "dre_report.sections.non_operational"}}</td>
    </tr>
    <tr class="line-item">
      <td class="label">{{t "dre_report.labels.extraordinary_results"}}</td>
      <td class="amount {{#if (isNegative extraordinaryResults)}}negative{{else}}positive{{/if}}">
        {{formatCurrency extraordinaryResults}}
      </td>
    </tr>

    <!-- Investimentos (CAPEX) - informativo, não afeta o resultado -->
    <tr class="section-header">
      <td colspan="2">{{t "dre_report.sections.capex"}}</td>
    </tr>
    <tr class="line-item">
      <td class="label">{{t "dre_report.labels.capex_detail"}}</td>
      <td class="amount {{#if (isExpense capexInvestments)}}negative{{/if}}">
        {{formatExpense capexInvestments}}
      </td>
    </tr>

    <!-- Resultado Líquido -->
    <tr class="total">
      <td>{{t "dre_report.labels.net_result"}}</td>
      <td class="amount {{#if (isNegative netResult)}}negative{{else}}positive{{/if}}">
        {{formatCurrency netResult}}
      </td>
    </tr>
  </table>

  <div class="notes">
    <h3>{{t "dre_report.notes.title"}}</h3>
    <p><strong>{{t "dre_report.notes.labels.gross_revenue"}}</strong> {{t "dre_report.notes.texts.gross_revenue"}}</p>
    <p><strong>{{t "dre_report.notes.labels.direct_costs"}}</strong> {{t "dre_report.notes.texts.direct_costs"}}</p>
    <p><strong>{{t "dre_report.notes.labels.operational_expenses"}}</strong> {{t "dre_report.notes.texts.operational_expenses"}}</p>
    <p><strong>{{t "dre_report.notes.labels.ministry_transfers"}}</strong> {{t "dre_report.notes.texts.ministry_transfers"}}</p>
    <p><strong>{{t "dre_report.notes.labels.capex"}}</strong> {{t "dre_report.notes.texts.capex"}}</p>
    <p><strong>{{t "dre_report.notes.labels.extraordinary_results"}}</strong> {{t "dre_report.notes.texts.extraordinary_results"}}</p>
    <p><strong>{{t "dre_report.notes.labels.note"}}</strong> {{t "dre_report.notes.texts.note"}}</p>
  </div>

  <div class="metadata">
    <p>{{t "dre_report.metadata.title"}}</p>
    <p>{{t "dre_report.metadata.generated"}}</p>
    <p>
      {{#if month}}
        {{t "dre_report.metadata.competence"}} {{month}}/{{year}}
      {{else}}
        {{t "dre_report.metadata.competence"}} {{year}}
      {{/if}}
    </p>
  </div>
</div>
