<html lang="{{i18nLang}}">
  <head>
    <meta charset="UTF-8" />
    <title>{{t "payment_commitment_contract.title"}}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Meow+Script&family=Pacifico&family=Yellowtail&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 40px;
        line-height: 1.5;
      }

      p,
      div,
      td {
        text-align: justify;
      }

      h1 {
        text-align: center;
        text-transform: uppercase;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      td,
      th {
        border: 1px solid #000;
        padding: 8px;
        text-align: left;
      }

      .signature-block {
        margin-top: 50px;
        display: flex;
        justify-content: space-between;
      }

      .signature {
        width: 45%;
        text-align: center;
      }

      .signature-name {
        font-family: "Yellowtail", cursive;
        font-size: 1em;
        line-height: 1;
        margin-top: 5px;
        margin-bottom: 10px;
      }
    </style>
  </head>
  <body>

    <h1>{{t "payment_commitment_contract.title"}}</h1>
    <br />
    <h3>{{t "payment_commitment_contract.parties_title"}}</h3>
    <p><strong>{{t "payment_commitment_contract.creditor"}}</strong><br />
      {{church.name}}<br />
      {{church.address}}<br />
      {{church.taxId}}<br />
      {{t "payment_commitment_contract.represented_by"}}
      {{church.legalRepresentative.name}}
      ({{church.legalRepresentative.role}})
    </p>

    <p><strong>{{t "payment_commitment_contract.debtor"}}</strong><br />
      {{debtor.name}}<br />
      {{t "payment_commitment_contract.identity_document"}}
      {{debtor.dni}}<br />
      {{t "payment_commitment_contract.address"}}
      {{debtor.address}}<br />
      {{t "payment_commitment_contract.phone"}}
      {{debtor.phone}}<br />
      {{t "payment_commitment_contract.email"}}
      {{debtor.email}}
    </p>

    <h2>{{t "payment_commitment_contract.clauses_title"}}</h2>

    <p><strong>{{t
          "payment_commitment_contract.first_clause_title"
        }}</strong><br />
      {{t "payment_commitment_contract.first_clause_text_intro"}}
      {{concept}}
      {{t "payment_commitment_contract.first_clause_text_amount"}}
      {{amountLiteral}}
      ({{symbol}}
      {{amount}}),
      {{t "payment_commitment_contract.first_clause_text_end"}}
    </p>

    <p><strong>{{t
          "payment_commitment_contract.second_clause_title"
        }}</strong><br />
      {{t "payment_commitment_contract.second_clause_text_intro"}}
      {{installments.length}}
      {{#ifEquals installments.length 1}}
        {{t "payment_commitment_contract.second_clause_single"}}
      {{else}}
        {{t "payment_commitment_contract.second_clause_multiple"}}
      {{/ifEquals}},
      {{t "payment_commitment_contract.second_clause_text_end"}}
    </p>

    <table>
      <thead>
        <tr>
          <th>{{t "payment_commitment_contract.table_installment_number"}}</th>
          <th>{{t "payment_commitment_contract.table_value"}}</th>
          <th>{{t "payment_commitment_contract.table_due_date"}}</th>
          <th>{{t "payment_commitment_contract.table_status"}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each installments}}
          <tr>
            <td>{{inc @index}}</td>
            <td>{{symbol}} {{amount}}</td>
            <td>{{dueDate}}</td>
            <td>{{status}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <p><strong>{{t
          "payment_commitment_contract.third_clause_title"
        }}</strong><br />
      {{t "payment_commitment_contract.third_clause_text_start"}}
      {{church.name}}
      {{t "payment_commitment_contract.third_clause_text_mid"}}
      {{church.address}},
      {{t "payment_commitment_contract.third_clause_text_end"}}
      <!--  para a conta-->
      <!--  bancária:<br /><br />-->
      <!--  Banco:-->
      <!--  {{bank.name}}<br />-->
      <!--  Titular:-->
      <!--  {{church.name}}<br />-->
      <!--  Número da conta:-->
      <!--  {{bank.accountNumber}}<br />-->
      <!--  Tipo de conta:-->
      <!--  {{bank.accountType}}-->
    </p>
    <p>
      {{instantPayment}}
    </p>
    <p><strong>{{t
          "payment_commitment_contract.fourth_clause_title"
        }}</strong><br />
      {{t "payment_commitment_contract.fourth_clause_text"}}
    </p>

    <p>{{t "payment_commitment_contract.signing_text_start"}}
      {{day}}
      {{t "payment_commitment_contract.signing_text_mid"}}
      {{month}}
      {{t "payment_commitment_contract.signing_text_end"}}
      {{year}}.</p>

    <br />

    <div class="signature-block">
      <div class="signature">
        {{church.legalRepresentative.role}}:<span
          class="signature-name"
        >{{church.legalRepresentative.name}}</span><br />
        {{t "payment_commitment_contract.cpf_label"}}
        {{church.legalRepresentative.dni}}
      </div>
      <div class="signature">
        <span class="signature-name">{{debtor.name}}</span><br />
        {{t "payment_commitment_contract.cpf_label"}}
        {{debtor.dni}}
      </div>
    </div>

  </body>
</html>